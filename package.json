{
  "name": "portfolio-manager",
  "version": "1.0.0",
  "description": "A modern portfolio management application with real-time stock prices and interactive visualizations.",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:backend": "jest --testPathPatterns=backend",
    "test:unit": "npx jest tests/portfolio.test.js"
  },
  "dependencies": {
    "dotenv": "^16.0.0",
    "express": "^4.18.0",
    "express-status-monitor": "^1.3.4",
    "mysql2": "^3.14.3"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "jest": "^30.0.5",
    "jest-environment-jsdom": "^30.0.5",
    "jsdom": "^26.1.0",
    "nodemon": "^2.0.0",
    "supertest": "^7.1.4"
  },
  "keywords": [
    "portfolio",
    "stocks",
    "finance",
    "trading",
    "investment",
    "nodejs",
    "express",
    "mysql"
  ],
  "author": "Portfolio Manager Team",
  "license": "MIT",
  "engines": {
    "node": ">=14.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/tests/**",
      "!**/coverage/**"
    ],
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js",
      "**/__tests__/**/*.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "verbose": true,
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ]
  }
}
